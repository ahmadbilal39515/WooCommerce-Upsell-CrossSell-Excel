<!-- Main modal -->
<div data-products-target="main_modal" id="modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <!-- Blurred background -->
  <div class="absolute inset-0 bg-gray-900 bg-opacity-50 backdrop-filter backdrop-blur-sm"></div>

  <div class="relative p-4 w-full max-w-md max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white shadow-md dark:bg-gray-700" style="width: 500px;">
      <!-- Modal header -->
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">  
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          Get Up & Cross sell Products Between Dates
        </h3>
        <button type="button" class="end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="modal" data-action="click->products#closeModal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
        
      </div>
      <div class="p-4 md:p-5">
          <div>
            <label for="startDate" class="block mb-2 mt-4 text-sm font-medium text-gray-900 dark:text-white">Start Date</label>
            <input type="date" data-products-target="startDate" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
          </div>
          <div>
            <label for="endDate" class="block mb-2 mt-4 text-sm font-medium text-gray-900 dark:text-white">End Date</label>
            <input type="date" data-products-target="endDate" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white" required>
          </div>
          <div class="mb-4 mt-4">
            <button data-action="products#form" class="w-full text-white bg-pink-500 font-medium text-sm px-5 py-3 text-center dark:bg-pink-600 hover:bg-pink-600 hover:text-white">
              Download CSV
            </button>
          </div>
      </div>
    </div>
  </div>
</div>